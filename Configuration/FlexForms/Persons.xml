<T3DataStructure>
	<sheets>
		<!--
			################################
			  SHEET General Settings
			################################
		-->
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<!-- View -->
					<switchableControllerActions>
						<TCEforms>
							<label>Mode</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Overview</numIndex>
                                        <numIndex index="1">Person->overview;Person->detail</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">Founder</numIndex>
                                        <numIndex index="1">Person->founder</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">FindOutMore</numIndex>
                                        <numIndex index="1">Person->findOutMore</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">Contact</numIndex>
                                        <numIndex index="1">Person->contact</numIndex>
                                    </numIndex>
                                    <numIndex index="4">
                                        <numIndex index="0">FounderDetail</numIndex>
                                        <numIndex index="1">Person->founderDetail</numIndex>
                                    </numIndex>
                                    <numIndex index="5">
                                        <numIndex index="0">FounderDe</numIndex>
                                        <numIndex index="1">Person->founderDe</numIndex>
                                    </numIndex>
                                </items>
							</config>
						</TCEforms>
					</switchableControllerActions>

                    <settings.person>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Select-Person</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>tx_persons_domain_model_person</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <foreign_table>tx_persons_domain_model_person</foreign_table>

                                <foreign_table_where>
                                    AND tx_persons_domain_model_person.deleted = 0
                                    AND tx_persons_domain_model_person.hidden = 0
                                    AND tx_persons_domain_model_person.t3ver_oid = 0
                                    ORDER BY tx_persons_domain_model_person.title
                                </foreign_table_where>

                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.person>

                    <settings.type>
                        <TCEforms>
                            <label>Type</label>
                            <onChange>reload</onChange>
                            <config>
